rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /{allPaths=**} {
      // Solo usuarios autenticados pueden leer archivos
      allow read: if request.auth != null;
      
      // Solo administradores y coordinadores pueden escribir archivos
      allow write: if request.auth != null && 
                    (request.auth.token.role == 'admin' || 
                     request.auth.token.role == 'coordinator');
    }
  }
}
